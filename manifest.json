{
  "name": "Simple Tab Recorder",
  "manifest_version": 3,
  "version": "1.0",
  "permissions": [
    "tabCapture",
    "offscreen",
    "nativeMessaging",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}